<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:context=".showcart">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/showcartrcv"
        android:layout_width="379dp"
        android:layout_height="456dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/returnnew"
        android:layout_width="46dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/showcartrcv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:srcCompat="@drawable/returnnew" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:text="Total Price : "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showcartrcv" />

    <TextView
        android:id="@+id/placeorderprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showcartrcv"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/refreshcart"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:src="@drawable/refreshbtn"
        app:layout_constraintBottom_toTopOf="@+id/showcartrcv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <Button
        android:id="@+id/checkoutbtn"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/shapebox3"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.428" />

    <ImageView
        android:id="@+id/emptycart"
        android:layout_width="320dp"
        android:layout_height="385dp"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="@+id/showcartrcv"
        app:layout_constraintEnd_toEndOf="@+id/showcartrcv"
        app:layout_constraintStart_toStartOf="@+id/showcartrcv"
        app:layout_constraintTop_toTopOf="@+id/showcartrcv"
        app:srcCompat="@drawable/emptycart2" />

</androidx.constraintlayout.widget.ConstraintLayout>